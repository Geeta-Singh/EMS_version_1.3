<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    tools:context="com.bydesign.ems1.Fragments.DeviceFragment"
    android:orientation="vertical"
    android:background="@drawable/b1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginLeft="5dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Device  "
            android:textColor="#009688"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:textStyle="bold"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/spinner"
            android:layout_weight="1"
            android:theme="@style/MyButton"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dee"
            android:text="Emission Monitoring Current Data System Report  "
            android:textColor="#009688"
            android:textStyle="bold"
            android:textSize="12dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dmMag"
            android:text="DM Message: "
            android:textColor="#009688"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:textSize="12dp"
            android:gravity="center_horizontal" />
        </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </LinearLayout>-->

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView2"
                android:fillViewport="true"
                android:layout_alignParentBottom="true" >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:stretchColumns="*"
                    android:gravity="center_horizontal"
                    android:id="@+id/maintableH" >
                </TableLayout>
            </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView1"
                android:fillViewport="true"
                >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:stretchColumns="*"
                    android:gravity="center_horizontal"
                    android:id="@+id/maintable"
                    >
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>

</android.support.v7.widget.CardView>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/savePdf"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left"

        app:backgroundTint="@color/fab"
        android:visibility="gone"
        android:elevation="6dp"
    android:src="@drawable/ic_get_app_black_24dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:elevation="6dp"
        android:visibility="gone"
        app:backgroundTint="@color/fab"
        android:src="@drawable/share"/>
</FrameLayout>
</LinearLayout>