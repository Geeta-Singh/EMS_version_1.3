
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bydesign.ems1.Fragments.AnalyzerStatusReportFragment"
    android:orientation="vertical"
    android:background="@drawable/b1"
    android:layout_marginTop="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp" >

    </LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device  "
                android:textColor="#009688"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:theme="@style/MyButton"
                />
        </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_view5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left"
                     >
                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:inputType="none"
                        android:hint="From Date"
                        android:textSize="12dp">

                    </EditText>
                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/editText1"
                        android:contentDescription="From Date"
                        android:cropToPadding="true"

                        android:background="@drawable/ca"
                        android:theme="@style/MyButton"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp">
                    <EditText
                        android:id="@+id/To"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"

                        android:textSize="12dp"
                        android:hint="To Date"
                        android:editable="false"
                        android:inputType="none">
                        <!-- <requestFocus />-->
                    </EditText>
                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/To"
                        android:contentDescription="To Date"
                        android:cropToPadding="true"
                        android:background="@drawable/ca"
                        >
                    </ImageButton>
                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_viewl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_gravity="center_horizontal"
                card_view:cardBackgroundColor="@android:color/transparent" >

                    <android.support.design.widget.FloatingActionButton
                    android:id="@+id/savePdf"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|left"
                    android:elevation="8dp"
                    android:visibility="gone"
                    app:backgroundTint="@color/fab"
                    android:src="@drawable/ic_get_app_black_24dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:id="@+id/show"
                        android:theme="@style/MyButton"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:onClick="dataSummary"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|right"
                        android:elevation="8dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/fab"
                        android:src="@drawable/share"/>
            </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="10dp"
                />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="8dp"
                        android:stretchColumns="*"
                        android:gravity="center_horizontal"
                        android:id="@+id/maintable"
                        android:layout_marginRight="10dp"
                        >
                    </TableLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" NO: Normal Mode "
                android:textColor="#009688"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" CM: Calibration Mode "
                android:textColor="#009688"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" MA: Maintenance Mode "
                android:textColor="#009688"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" FA: Faulty Mode "
                android:textColor="#009688"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" no_info: No Info Mode "
                android:textColor="#009688"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"/>


        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    </LinearLayout>
