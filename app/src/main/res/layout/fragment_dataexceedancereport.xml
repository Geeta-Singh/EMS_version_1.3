<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/b1"
    android:layout_marginTop="60dp"
    tools:context="com.bydesign.ems1.Fragments.DataExceedanceReportFragment"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Device  "
                android:textColor="#009688"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:theme="@style/MyButton"
                />
        </LinearLayout>
           </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_wp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left" >
                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="none"
                    android:hint="From Date"
                    android:textSize="12dp">

                </EditText>
                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/editText1"
                    android:contentDescription="From Date"
                    android:cropToPadding="true"
                    android:background="@drawable/ca"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="5dp">
                <EditText
                    android:id="@+id/To"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"

                    android:textSize="12dp"
                    android:hint="To Date"
                    android:editable="false"
                    android:inputType="none">
                    <!-- <requestFocus />-->
                </EditText>
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/To"
                    android:layout_marginTop="5dp"
                    android:contentDescription="To Date"
                    android:cropToPadding="true"
                    android:background="@drawable/ca"
                   >
                </ImageButton>
            </LinearLayout>
               </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_ewp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/savePdf"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|left"
                        android:elevation="8dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/fab"
                        android:src="@drawable/ic_get_app_black_24dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/show"
                        android:theme="@style/MyButton"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        />
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|right"
                        android:elevation="8dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/fab"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/share"/>

</android.support.v7.widget.CardView>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:layout_alignParentBottom="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/t1"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp" />
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/horizontalScrollView1"
                            android:fillViewport="true"
                            >
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="8dp"
                                android:stretchColumns="*"
                                android:gravity="center_horizontal"
                                android:id="@+id/maintable"
                                >
                            </TableLayout>
                        </HorizontalScrollView>
                    </ScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="13dp"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView2"
                    android:fillViewport="true"
                    >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="8dp"
                        android:stretchColumns="*"
                        android:gravity="center_horizontal"
                        android:id="@+id/maintable2"

                        >
                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>
                </LinearLayout>
</android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="13dp"

                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView3"
                    android:fillViewport="true"
                    >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:stretchColumns="*"
                        android:gravity="center_horizontal"
                        android:id="@+id/maintable3"

                        >
                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
</LinearLayout>
    </ScrollView>

</FrameLayout>

    </LinearLayout>
