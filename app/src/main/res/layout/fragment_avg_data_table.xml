<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bydesign.ems1.Fragments.AvgData_tableFragment"
    android:orientation="vertical"
    android:background="@drawable/b1">





    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Device  "
                android:textColor="#009688"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:textStyle="bold"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:theme="@style/MyButton"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#009688"
                    android:text=" Granularity"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"/>



        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/s1"
            android:gravity="right"
            android:layout_weight="1"

            android:theme="@style/MyButton"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
     <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp">
                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="none"
                    android:hint="From Date  "
                    android:textSize="12dp">

                </EditText>
                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"

                    android:layout_toRightOf="@+id/editText1"
                    android:contentDescription="From Date"
                    android:cropToPadding="true"
                    android:background="@drawable/ca"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp">
                <EditText
                    android:id="@+id/To"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:textSize="12dp"
                    android:hint="To Date"
                    android:editable="false"
                    android:inputType="none">
                    <!-- <requestFocus />-->
                </EditText>
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/To"
                    android:contentDescription="To Date"
                    android:cropToPadding="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ca"
                    >
                </ImageButton>
            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                card_view:cardCornerRadius="4dp"
                android:layout_gravity="center_horizontal"
                card_view:cardBackgroundColor="@android:color/transparent">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/savePdf"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|left"
                    android:elevation="8dp"
                    app:backgroundTint="@color/fab"
                    android:src="@drawable/ic_get_app_black_24dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Average Data"
                    android:id="@+id/show"
                    android:theme="@style/MyButton"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="15dp"
                    android:elevation="8dp"

                    app:backgroundTint="@color/fab"
                    android:src="@drawable/share"/>
            </android.support.v7.widget.CardView>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_viewp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/horizontalScrollView"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:stretchColumns="*"
                    android:gravity="center_horizontal"
                    android:id="@+id/maintableH" >
                </TableLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*"
                        android:gravity="center_horizontal"
                        android:id="@+id/maintable"
                        >
                    </TableLayout>

            </ScrollView>
            </LinearLayout>
            </HorizontalScrollView>
            </android.support.v7.widget.CardView>


        </FrameLayout>

</LinearLayout>
